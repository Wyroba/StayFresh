<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MySpinnerStyle" parent="Theme.MaterialComponents.Light">
    <item name="android:background">#808080</item>
        <item name="android:popupBackground">#FFFFFF</item>
    </style>

    <style name="MyAppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="SpinnerDropdownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/spinner_dropdown_text_size</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:dropDownItemStyle">@style/SpinnerDropdownItemStyle</item>
    </style>

    <style name="CommonFabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:src">@drawable/add_icon</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
    </style>
</resources>
